<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="@color/colorSecondaryAccent"
              android:layout_height="wrap_content"
              android:layout_gravity="center">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/editTitle"
              tools:text="Edit Title"
              android:textSize="18sp" android:layout_gravity="center_horizontal"
              android:layout_marginBottom="10dp"
    />

    <EditText
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editTitle" android:layout_gravity="center_horizontal"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/editBody"
              android:textSize="18sp" android:layout_gravity="center_horizontal" android:layout_marginTop="20dp"
              android:layout_marginBottom="10dp"/>
    <EditText
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:id="@+id/editBody"
            android:layout_gravity="center_horizontal"/>
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <Button
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/save"
                tools:text="Save"
                android:layout_gravity="end"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginStart="105dp"
                android:layout_alignParentStart="true"/>
        <Button
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/cancel" tools:text="Cancel"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="105dp"
                android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</LinearLayout>