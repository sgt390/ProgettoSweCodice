<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/list_layout">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="585dp"
                android:layout_marginBottom="150dp"
                android:background="@android:color/darker_gray"
                android:padding="4dp"
                android:scrollbars="vertical"
                tools:context=".ListFragment"/>
        <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/insertTitle" android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true" android:layout_marginBottom="90dp"
                android:layout_alignStart="@+id/add_button" android:hint="@string/inserttitle"/>
        <Button
                android:id="@+id/add_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"
                android:text="@string/insert" tools:text="Add"/>

        <Button
                android:id="@+id/confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="25dp"
                android:textSize="18sp"
                android:text="@string/confirm"
                tools:text="Confirm"/>

</RelativeLayout>